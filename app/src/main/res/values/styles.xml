<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/bsPrimary</item>
    </style>

    <style name="mainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="DatePickerText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:background">@drawable/bordered_edt_text</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bgbutton</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinnerbg</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:background">@drawable/selector_edttext</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
